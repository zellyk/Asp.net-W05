@model Product
@{
    ViewBag.Title = "Product Details";

    // create culture variable
    var culture = System.Globalization.CultureInfo
        .CreateSpecificCulture("en-US");
}

<h1>Product Details</h1>
<div class="row">
    <div class="col-sm-4">
        <img src="~/images/@ViewBag.ImageFilename" 
             alt="@Model.Name Image" 
             class="img-responsive center-block"/>
    </div>

    <div class="col-sm-8">
        <h2>@Model.Name</h2>
        <table class="table table-bordered table-striped">
            <tr>
                <td>List Price:</td>
                <td>@Model.Price.ToString("C", culture)</td>
            </tr>
            <tr>
                <td>Discount Percent:</td>
                <td>@Model.DiscountPercent.ToString("P0", culture)</td>
            </tr>
            <tr>
                <td>Your Price:</td>
                <td>@Model.DiscountPrice.ToString("C", culture) 
                (You save @Model.DiscountAmount.ToString("C", culture))</td>
            </tr>
        </table>
        <a asp-controller="Cart" asp-action="Add"
            asp-route-id="@Model.Slug" class="btn btn-primary">Add to Cart</a>
        
    </div>
</div>